 pipeline {
    agent any

    tools {
        maven 'M2_HOME' // Ensure that 'M2_HOME' matches the Maven installation name in Jenkins
    }

    stages {
        stage('Checkout') {
            steps {
                // Cloning the Git repository from the 'aymen' branch
                git branch: 'yosra', url: 'https://github.com/Si-aymen/Courzelo-Devops.git'
            }
        }

        stage('Verify Directory Structure') {
            steps {
                // List directory structure to locate pom.xml
                sh 'ls -R' // Recursive listing to see the full structure
            }
        }

        stage('Build') {
            steps {
                // Adjust 'backendPidev' directory if needed based on directory structure
                dir('backendPidev') { // Change this directory if needed
                    // Running the Maven build
                    sh 'mvn clean install'
                }
            }
        }

        stage('Test') {
            steps {
                dir('backendPidev') { // Adjust if needed
                    // Running Maven tests
                    sh 'mvn test'
                }
            }
        }
    }

    post {
        success {
            echo 'Build and tests succeeded!'
        }
        failure {
            echo 'Build failed. Please check the logs.'
        }
    }
}
