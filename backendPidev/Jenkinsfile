pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Build') {
            steps {
                dir('backendPidev') {
                    sh 'mvn clean install'
                }
            }
        }
        stage('Deploy to Nexus') {
            steps {
                dir('backendPidev') {
                    sh 'mvn deploy -s ~/.m2/settings.xml -X'
                }
            }
        }
    }
}
